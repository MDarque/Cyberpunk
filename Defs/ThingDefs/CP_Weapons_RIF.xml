	<!-- =================== Arasaka AW-65 Assault Rifle ================== -->

  <ThingDef ParentName="BaseHumanGun">
    <defName>Gun_AAW65_CP</defName>
    <label>Arasaka AW-65</label>
    <description>Short, fat, and menacing is the only way to describe this rifle.  Arasaka developed this weapon with maximum kill ratio's in mind, and succeeded.  Its large suppresser keeps the noise down while it unleashes its load of 5.56 ammunition.  Comes standard with a low light telescopic sight.</description>
    <graphicData>
      <texPath>CP/Weapon/AAW65</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractRifle</soundInteract>
    <statBases>
      <MarketValue>450</MarketValue>
      <AccuracyTouch>0.98</AccuracyTouch>
      <AccuracyShort>0.94</AccuracyShort>
      <AccuracyMedium>0.91</AccuracyMedium>
      <AccuracyLong>0.82</AccuracyLong>
      <RangedWeapon_Cooldown>0.69</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_556_CP</projectileDef>
        <warmupTicks>90</warmupTicks>
        <range>40</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>ShotAssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

