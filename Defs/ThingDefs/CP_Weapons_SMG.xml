	<!-- =================== Arasaka DE-Mag ================== -->
  <ThingDef ParentName="BaseHumanGun">
    <defName>Gun_ADEMAG_CP</defName>
    <label>Arasaka DE-Mag</label>
    <description>A very compact, but controllable submachine gun with a high ammo capacity and an above average rate of fire.</description>
    <graphicData>
      <texPath>CP/Weapon/ADEMAG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractSMG</soundInteract>
    <statBases>
      <MarketValue>380</MarketValue>
      <AccuracyTouch>0.89</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>0.66</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_11mm_CP</projectileDef>
        <warmupTicks>45</warmupTicks>
        <range>30</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>11</ticksBetweenBurstShots>
        <soundCast>ShotMachinePistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

