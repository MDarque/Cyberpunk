<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>3</DeteriorationRate>
			<SellPriceFactor>0.5</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>CPApparels</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	
	<ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef Name="ArmorMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>
	
  
	<!-- basic cloth, pants and shirt -->

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>CP_KevlarTShirt</defName>
		<label>Kevlar T-Shirt</label>
		<description>Can be worn unnoticably under most street clothes. Will stop most rounds up to a .45 ACP.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
    <costList>
      <Plasteel>50</Plasteel>
    </costList>
		<costStuffCount>50</costStuffCount>	
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
      <MarketValue>90</MarketValue>
			<WorkToMake>5000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<ArmorRating_Blunt>0.06</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.08</ArmorRating_Sharp>
			<Insulation_Cold>-4</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</worngraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>Military</li>
				<li>CP</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
  
  
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>CP_MGBodysuit</defName>
		<label>MetalGear™ bodysuit</label>
		<description>Laminated expoxide plate armor. Bulky and designed in modular sections, with arm coverings, torso and back clamshell.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
    <costList>
      <Plasteel>200</Plasteel>
    </costList>
		<statBases>
			<MarketValue>400</MarketValue>
			<MaxHitPoints>200</MaxHitPoints>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.06</ArmorRating_Sharp>
			<ArmorRating_Heat>0.07</ArmorRating_Heat>
			<Insulation_Cold>-15</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</worngraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>2</commonality>
			<tags>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>


	<ThingDef ParentName="ApparelMakeableBase">
		<defName>CP_MGPants</defName>
		<label>MetalGear™ pants</label>
		<description>Laminated expoxide plate armor for the legs.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Various/Pants_OnMap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
    <costList>
      <Plasteel>200</Plasteel>
    </costList>	
		<statBases>
      <MarketValue>200</MarketValue>
			<ArmorRating_Blunt>0.08</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.07</ArmorRating_Sharp>
			<Insulation_Cold>-4</Insulation_Cold>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

</ThingDefs>