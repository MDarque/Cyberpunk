<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>3</DeteriorationRate>
			<SellPriceFactor>0.5</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<thingCategories>
			<li>USCMApparels</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	
	<ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef Name="ArmorMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>
	
  
	<!-- basic cloth, pants and shirt -->

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Marine_TShirt</defName>
		<label>Marine T-Shirt</label>
		<description>A basic T-shirt.</description>
		<graphicData>
			<texPath>Marines/Apparel/TShirt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>50</costStuffCount>	
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<ArmorRating_Blunt>0.04</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.04</ArmorRating_Sharp>
			<Insulation_Cold>-4</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<worngraphicPath>Marines/Apparel/TShirt</worngraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>Military</li>
				<li>USCM</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
  
  
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>USCM_Bodysuit</defName>
		<label>USCM bodysuit</label>
		<description>These bodysuits are made to protect most of the body of USCM footmen.</description>
		<graphicData>
			<texPath>Marines/Apparel/Bodysuit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>60</costStuffCount>	
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MarketValue>300</MarketValue>
			<WorkToMake>10000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.06</ArmorRating_Sharp>
			<ArmorRating_Heat>0.07</ArmorRating_Heat>
			<Insulation_Cold>-15</Insulation_Cold>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<worngraphicPath>Marines/Apparel/Bodysuit</worngraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>2</commonality>
			<tags>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>


	<ThingDef ParentName="ApparelMakeableBase">
		<defName>USCM_CamoPants</defName>
		<label>USCM standard pants</label>
		<description>Standard pants of USCM troopers.</description>
		<graphicData>
			<texPath>Marines/Pants/USCM_Camo_Pants</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>50</costStuffCount>	
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>	
		<statBases>
			<WorkToMake>7000</WorkToMake>
			<ArmorRating_Blunt>0.08</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.07</ArmorRating_Sharp>
			<Insulation_Cold>-4</Insulation_Cold>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<worngraphicPath>Marines/Pants/USCM_Camo_Pants</worngraphicPath>
			<bodyPartGroups>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
  
  
  <!-- Armors -->
  
	<ThingDef ParentName="ArmorMakeableBase">
		<defName>USCM_M3_CamoArmor</defName>
		<label>USCM M3 Armor</label>
		<description>M3 Body armor. Standard issue for USCM troopers.</description>
		<graphicData>
			<texPath>Marines/Armor/M3_Armor/M3CamoArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>3500</MarketValue>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>60000</WorkToMake>
			<ArmorRating_Blunt>0.30</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.60</ArmorRating_Sharp>
			<ArmorRating_Heat>0.25</ArmorRating_Heat>
			<Insulation_Cold>-5</Insulation_Cold>
		</statBases>	
		<costList>
			<Steel>150</Steel>
		</costList>
		<costStuffCount>60</costStuffCount>	
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>		
		<equippedStatOffsets>
			<MoveSpeed>-0.06</MoveSpeed>
			<WorkSpeedGlobal>-0.04</WorkSpeedGlobal>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<worngraphicPath>Marines/Armor/M3_Armor/M3CamoArmor</worngraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<commonality>1</commonality>
			<tags>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>


</ThingDefs>